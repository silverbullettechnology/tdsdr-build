# Set AD1 to alert mode to allow chip configuration
device ad1
set_ensm_mode 2

# Enable FIR filters
set_filter_fir_config             wimax
set_in_out_voltage_filter_fir_en  1
set_filter_fir_config             wimax
get_filter_fir_config

# Setup AD1 for 4MSPS
set_out_voltage_sampling_frequency 4000000
get_out_voltage_sampling_frequency
set_in_voltage_sampling_frequency  4000000
get_in_voltage_sampling_frequency

# Set AD1 to FDD
set_ensm_mode 5

# Set AD2 to alert mode to allow chip configuration
device ad2
set_ensm_mode 2

# Enable FIR filters
set_filter_fir_config             wimax
set_in_out_voltage_filter_fir_en  1
set_filter_fir_config             wimax
get_filter_fir_config

# Setup AD2 for 4MSPS
set_out_voltage_sampling_frequency 4000000
get_out_voltage_sampling_frequency
set_in_voltage_sampling_frequency  4000000
get_in_voltage_sampling_frequency

# Set AD2 to FDD
set_ensm_mode 5

